generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  phone     String?
  service   String
  notes     String?  @default("")
  startAt   DateTime // booking start time
  createdAt DateTime @default(now())
  status    String   @default("confirmed")
}
